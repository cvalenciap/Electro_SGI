@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Capacitacion
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.VisitaGerencial
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Seguimiento.DocReabiertoGerencia.DocReabiertoGerenciaModel

<div class="main-content view-wrap">
    <div class="GmdBody-header main-title">
        <h2 class="pull-left">
           <strong>@SeguimientoResource.EtiquetaReabiertoGerencia</strong>
        </h2>
    </div>
    <div class="content-body">
        <div class="title-interna">
            <span>@Html.Raw(VisitaGerencialResource.EtiquetaLista)</span>
        </div>
        <div class="filter-avanzado">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaNumeroDocumento):</label>
                        @Html.TextBox("txtNumeroDocumento", "", new { id = "txtNumeroDocumento", @class = "form-control", @validable = "required Validar" })
                    </div>
                </div>
            </div>
        </div>
        <div class="box-acciones-foot filter">
            <button class="btn btn-default" id="btnLimpiar">@Html.Raw(RecordsResource.EtiquetaLimpiar)</button>
            <button class="btn btn-primary" id="btnBuscar">@Html.Raw(RecordsResource.EtiquetaBuscar)</button>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.VisitaGerencial.Index.Resource')
        Pe.ElectroPeru.SGI.Presentacion.VisitaGerencial.Index.Resource.MsjSinResultados = '@Html.Raw(VisitaGerencialResource.MsjSinResultados)';
        Pe.ElectroPeru.SGI.Presentacion.VisitaGerencial.Index.Resource.ConfirmacionCerrar = '@Html.Raw(VisitaGerencialResource.ConfirmacionCerrar)';

        ns('Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource')
        Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource.MsgNoExisteDocumento = '@Html.Raw(SeguimientoResource.MsgNoExisteDocumento)';
        Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource.MsgEstadoAbiertoGerencia = '@Html.Raw(SeguimientoResource.MsgEstadoAbiertoGerencia)';
        Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource.MsgEstadoReabiertoGerencia = '@Html.Raw(SeguimientoResource.MsgEstadoReabiertoGerencia)';
        Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource.MsgEstadoAnuladoGerencia = '@Html.Raw(SeguimientoResource.MsgEstadoAnuladoGerencia)';
        Pe.ElectroPeru.SGI.Presentacion.DocReabiertoGerencia.Seguimiento.Resource.MsgEstadoAnulado = '@Html.Raw(SeguimientoResource.MsgEstadoAnulado)';
        
        ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.Models')
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.Models.DocReabiertoGerenciaModel = '@(Html.Raw(Json.Encode(Model)))';

        ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.Index.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.Index.Actions.FormularioDocReabiertoGerencia = '@Url.Action("Index", "DocReabiertoGerencia/FormularioDocReabiertoGerencia", new { Area = "Seguimiento" })';       
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.Index.Actions.ObtenerDocumento = '@Url.Action("ObtenerDocumento", "DocReabiertoGerencia", new { Area = "Seguimiento" })'; 

    </script>
}
