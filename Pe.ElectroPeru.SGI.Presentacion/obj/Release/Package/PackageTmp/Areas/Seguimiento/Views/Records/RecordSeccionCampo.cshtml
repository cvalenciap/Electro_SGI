<script type="text/javascript">
    ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Records.RecordSeccionCampo.Models')
    Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Records.RecordSeccionCampo.Models.RecordSeccionCampo = @(Html.Raw(serializer.Serialize(Model)))
</script>
<div class="content-body">
    <div class="left-tabs">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            @if (Model.ListaSeccionIzquierda.Count > 0)
            {
                int contadorSeccion = 1;
                foreach (SeccionResponse seccionIzquierdaResponse in Model.ListaSeccionIzquierda)
                {
                    if (contadorSeccion == 1)
                    {
                        <li role="presentation" class="active">
                            <a href='#@seccionIzquierdaResponse.CodigoSeccion' class="top-tab" aria-controls='@seccionIzquierdaResponse.CodigoSeccion' role="tab" data-toggle="tab">@seccionIzquierdaResponse.NombreSeccionIdioma</a>
                        </li>
                    }
                    else
                    {
                        <li role="presentation">
                            <a href='#@seccionIzquierdaResponse.CodigoSeccion' class="top-tab" aria-controls='@seccionIzquierdaResponse.CodigoSeccion' role="tab" data-toggle="tab">@seccionIzquierdaResponse.NombreSeccionIdioma</a>
                        </li>
                    }

                    contadorSeccion++;
                }
            }
        </ul>
        <!-- Cierra Nav tabs -->
    </div>


    <div class="right-tabs">
        <!-- Tab panes -->
        <div class="tab-content">
            @if (Model.ListaSeccionIzquierda.Count > 0)
            {
                int contadorSeccion = 1;
                foreach (SeccionResponse seccionIzquierdaResponse in Model.ListaSeccionIzquierda)
                {

                    if (Model.ListaSeccionCuerpo.Count > 0)
                    {
                        List<SeccionResponse> listaSeccionCuerpoPorSeccionIzquierda = Model.ListaSeccionCuerpo.Where(x => x.CodigoSeccionPadre == seccionIzquierdaResponse.CodigoSeccion).ToList();

                        if (listaSeccionCuerpoPorSeccionIzquierda.Count > 0)
                        {
                            if (contadorSeccion == 1)
                            {
                                <!--INICIO DE TAB PANEL-->
                                @Html.Raw("<div role='tabpanel' class='tab-pane fade in active' id='" + @seccionIzquierdaResponse.CodigoSeccion + "'>")
                            }
                            else
                            {
                                <!--INICIO DE TAB PANEL-->
                                @Html.Raw("<div role='tabpanel' class='tab-pane fade in' id='" + @seccionIzquierdaResponse.CodigoSeccion + "'>")
                            }

                            //Crear Formulario por cada Sección Izquierda
                            @Html.Raw("<form onsubmit='return false;' id='frmRecordSeccionCampo" + seccionIzquierdaResponse.CodigoSeccion + "' codigoSeccionIzquierda='" + seccionIzquierdaResponse.CodigoSeccion + "' indicadorSeccionPrincipalGuardar='" + seccionIzquierdaResponse.IndicadorSeccionPrincipalGuardar + "' nombreSeccionIzquierda='" + seccionIzquierdaResponse.NombreSeccionIdioma + "' codigoTipoRecord='" + seccionIzquierdaResponse.CodigoTipoRecord + "'>")
                            
                            
                            
                            foreach (SeccionResponse seccionCuerpoResponse in listaSeccionCuerpoPorSeccionIzquierda)
                            {
                                //INICIO - PINTANDO SECCIONES FIJAS
                                if (!@seccionCuerpoResponse.IndicadorVistaFija)
                                {
                                    if (@seccionCuerpoResponse.NombreVistaFija == DatosConstantes.TipoVista.VistaApendice)
                                    {
                                        <div role="tabpanel" class="tab-pane fade in" id="appendix">
                                            <div class="title-interna">
                                                <span>@seccionCuerpoResponse.NombreSeccionIdioma</span>
                                                <div class="acciones-form btn-group btn-group-table">
                                                    <button id="btnAgregarRecordAnexoAppendix" type="button" class="btn-table text-line one" data-toggle="modal" data-target="#addFile">
                                                       @Html.Raw(RecordsResource.EtiquetaAgregarArchivo)
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="table-grilla">
                                                <div id="divGrdResultadoRecordAppendix">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else if (@seccionCuerpoResponse.NombreVistaFija == DatosConstantes.TipoVista.VistaFoto)
                                    {
                                        <div role="tabpanel" class="tab-pane fade in" id="photos">
                                            <div class="title-interna">
                                                <span>@seccionCuerpoResponse.NombreSeccionIdioma</span>
