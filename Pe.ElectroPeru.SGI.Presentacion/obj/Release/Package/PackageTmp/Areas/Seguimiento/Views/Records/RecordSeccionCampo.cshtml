                                                                                @Html.DropDownList(idControl, listaOpcionesSeleccion, new { @id = idControl, @codigoTipoRecord = campo.CodigoTipoRecord, @codigoSeccionCampo = campo.CodigoSeccionCampo, @codigoCampo = campo.CodigoCampo, @codigoTipoControl = campo.CodigoTipoControl, @codigoSeccion = campo.CodigoSeccion, @class = "form-control", @validable = "required Validar_" + campo.CodigoCampo.ToString().Replace("-", "_"), @codigoTipoLlenado = campo.CodigoTipoLlenado, @codigoOrigen = campo.CodigoOrigen, @codigoTabla = campo.CodigoTabla, @descripcionTabla = campo.DescripcionTabla, @condicionTabla = campo.CondicionTabla })
                                                                            }
