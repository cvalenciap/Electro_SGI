                <button class="btn btn-primary" id="btnBuscar">@Html.Raw(RecordsResource.EtiquetaBuscar)</button>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h4>@Html.Raw(GenericoResource.EtiquetaResultadosBusqueda)</h4>
