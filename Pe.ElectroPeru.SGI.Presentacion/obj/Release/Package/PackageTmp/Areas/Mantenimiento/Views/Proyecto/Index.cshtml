@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mantenimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Mantenimiento.Proyecto.FormularioBandejaProyectoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content view-wrap">
<div class="GmdBody-header main-title">
        <h2 class="pull-left">
            <strong>@Html.Raw(ProyectoResource.EtiquetaTituloPrincipal)</strong>
        </h2>
        <div class="pull-right">
            <div class="acciones-form btn-group btn-group-table" style="top: 10px">
                <button id="btnAgregar" type="button" class="btn-table text-line one">
                    @Html.Raw(ProyectoResource.BotonAgregarProyecto)
                </button>
            </div>
        </div>
    </div>
    <div class="content-body">
        <div class="title-interna">
            <span>@Html.Raw(ProyectoResource.EtiquetaLista)</span>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h4>@Html.Raw(GenericoResource.EtiquetaResultadosBusqueda)</h4>
            </div>
        </div>
        <div class="table-grilla">
            <div id="divGrdResult">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Actions.BuscarProyecto = '@Url.Action("BuscarProyecto", "Proyecto", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Actions.FormularioProyecto = '@Url.Action("FormularioProyecto", "Proyecto", new { Area = "Mantenimiento" })';
