        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridEstadoRegistroDescripcion = '@Html.Raw(ProyectoResource.GridEstadoRegistroDescripcion)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridAcciones = '@Html.Raw(GenericoResource.GridAcciones)';

        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Models');
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Models.Proyecto = '@(Html.Raw(Json.Encode(Model)))';
    </script>  
    <style type="text/css">
        .skin-stracon .table-grilla {
            overflow-y: auto !important;
        }

        /*.skin-stracon .form-control {
