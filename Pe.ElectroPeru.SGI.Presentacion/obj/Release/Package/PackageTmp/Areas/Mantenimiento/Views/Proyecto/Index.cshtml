        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Actions.EliminarProyecto = '@Url.Action("EliminarProyecto", "Proyecto", new { Area = "Mantenimiento" })';

        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.FormularioProyecto = '@Html.Raw(ProyectoResource.EtiquetaFormularioProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.EtiquetaRegistrarProyecto = '@Html.Raw(ProyectoResource.EtiquetaRegistrarProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.EtiquetaEditarProyecto = '@Html.Raw(ProyectoResource.EtiquetaEditarProyecto)';                
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridCodigoProyecto = '@Html.Raw(ProyectoResource.GridCodigoProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridNombreProyecto = '@Html.Raw(ProyectoResource.GridNombreProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridNombreProyectoUsuario = '@Html.Raw(ProyectoResource.GridNombreProyectoUsuario)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridNombreProyecto = '@Html.Raw(ProyectoResource.GridNombreProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Proyecto.Resources.GridCodigoIdentificador = '@Html.Raw(ProyectoResource.GridCodigoIdentificador)';
