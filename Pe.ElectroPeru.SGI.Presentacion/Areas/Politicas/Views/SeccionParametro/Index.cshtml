@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Politicas
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes

@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Politicas.SeccionParametro.SeccionParametroModel
@{
    ViewBag.Title = "Index";
}
<div class="GmdBody-header">
    <h2>@Html.ActionLink(ParametroResource.EtiquetaTituloPrincipal, "Index", "Parametro") <i class="fa fa-angle-right"></i>@SeccionParametroResource.EtiquetaTituloPrincipal</h2>
</div>
<div class="GmdBody-body">
    <div class="row">
        <input id="hdCodigoParametro" value="@Model.Parametro.CodigoParametro" type="hidden"/>
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaParametroEmpresa</label>
                <h3>
                    <label>@Model.Parametro.DescripcionIndicadorEmpresa</label>
                </h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaTipoParametro</label>
                <h3>
                    <label>@Model.Parametro.DescripcionTipoParametro</label>
                </h3>
            </div>            
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaSistema</label>
                <h3>
                    <label>@Model.Parametro.NombreSistema</label>
                </h3>
            </div>
        </div>        
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaCodigoIdentificador</label>                
                <h3>
                    <label>@Model.Parametro.CodigoIdentificador</label>
                </h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaNombreParametro</label>
                <h3>
                    <label>@Model.Parametro.Nombre</label>
                </h3>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <label>@SeccionParametroResource.EtiquetaDescripcionParametro</label>                
                 <h3>
                    <label>@Model.Parametro.Descripcion</label>
                </h3>
            </div>
        </div>        
    </div>
    <div>
        <hr />
        <div class="row">
            <div class="col-sm-6" align ="left">
                <h3>@GenericoResource.EtiquetaResultadosBusqueda</h3>
            </div>
            <div class="col-sm-6" align ="right">
                <button id="btnEliminar" class="btn btn-info">@GenericoResource.BotonEliminar</button>
                <button id="btnAgregar" class="btn btn-primary">@GenericoResource.BotonAñadir</button>            
            </div>
        </div>
        <div id="divGrdResult"></div>        
    </div>
    <div class="col-sm-12 text-right">
        @Html.ActionLink(GenericoResource.BtnRegresar, "Index", "Parametro", null, new { @class = "btn btn-default" })
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions.BuscarSeccionParametro         = '@Url.Action("BuscarSeccionParametro", "SeccionParametro", new { Area = "Politicas" })';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions.CambiarSistema                 = '@Url.Action("CambiarSistema", "SeccionParametro", new { Area = "Politicas" })';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions.FormularioSeccionParametro     = '@Url.Action("FormularioSeccionParametro", "SeccionParametro", new { Area = "Politicas" })';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions.GuardarSeccionParametro        = '@Url.Action("GuardarSeccionParametro", "SeccionParametro", new { Area = "Politicas" })';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Actions.EliminarSeccionParametro       = '@Url.Action("EliminarSeccionParametro", "SeccionParametro", new { Area = "Politicas" })';

        ns('Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources')        
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.FormularioSeccionParametrosGenerales     = '@Html.Raw(SeccionParametroResource.EtiquetaDlgFormularioSeccionParametrosGenerales)';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.Confirmar                         = '@Html.Raw(SeccionParametroResource.EtiquetaTituloDlgConfirmar)';
