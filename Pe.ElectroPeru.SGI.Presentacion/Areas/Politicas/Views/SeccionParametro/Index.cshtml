        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.GridEtiquetaParamatroRelacionado  = '@Html.Raw(SeccionParametroResource.EtiquetaParametroRelacionado)';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.GridEtiquetaSeccionRelacionada    = '@Html.Raw(SeccionParametroResource.EtiquetaSeccionRelacionada)';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.GridEtiquetaSeccionRelacionadaVisible = '@Html.Raw(SeccionParametroResource.EtiquetaSeccionRelacionadaVisible)';

        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.EtiquetaEditar                    = '@Html.Raw(GenericoResource.EtiquetaEditar)';
        Pe.ElectroPeru.SGI.Presentacion.Politicas.SeccionParametro.Resources.EtiquetaEliminar                  = '@Html.Raw(GenericoResource.EtiquetaEliminar)';
