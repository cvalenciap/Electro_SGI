@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Capacitacion
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Capacitacion.AsignacionProyectoModel

<div class="modal-body">
    <div class="form-group">
        <div class="filter-avanzado">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label style="margin-top: 8px"><strong>@Html.Raw(AsignacionResource.EtiquetaAgregarProcesosEquipo): </strong></label>                   
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="txtNombreEquipo" disabled readonly="true" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label><strong>@Html.Raw(AsignacionResource.EtiquetaProcesos):</strong></label>
                            @Html.DropDownList("slcProceso", new List<SelectListItem>(), new { id = "slcProceso", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pull-right">
                            <button class="btn btn-primary" style="margin-top: 22px;" id="btnAgregarProceso">@Html.Raw(AsignacionResource.EtiquetaAgregarProceso)</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="title-interna">
        <span>@Html.Raw(AsignacionResource.EtiquetaProcesos)</span>
    </div> 
    <div class="table-grilla">
        <div id="divGrdResultadoProcesosModal">
        </div>
    </div>
    <div class="row form-inline form-group">
        <div class="col-sm-4">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-9 text-right"><label style="margin-top:8px;">@Html.Raw(AsignacionResource.EtiquetaCantidadProcesos): </label></div>                     
                        <div class="col-sm-3"><input type="text" class="form-control" readonly="readonly" id="txtCantidadProcesos"/></div>
                    </div>
                </div>
         </div>
         <div class="col-sm-2">
         </div>
        <div class="col-sm-5">
            <div class="form-group">
                <div class="row" style="margin-right: -335px;">
                    <div class="col-sm-8 text-right">
                        <label style="margin-top:8px;">@Html.Raw(AsignacionResource.EtiquetaTotales): </label>
                    </div>    
                    <div class="col-sm-4">                      
                          <input type="text" style="text-align: center;" class="form-control" id="txtCantidadHorasPlanificadasProceso" readonly="readonly" />
                    </div>    
                </div>
            </div>
        </div>
         <div class="col-sm-1">
         </div>    
    </div>
</div>
<div id="blockSubProcesos" class="modal-body" style="display: none;">
      <div class="filter-avanzado">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label><strong>@Html.Raw(AsignacionResource.EtiquetaSubProceso):</strong></label>
                            @Html.DropDownList("slcSubProceso", new List<SelectListItem>(), new { id = "slcSubProceso", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="pull-right">
                            <button class="btn btn-primary" style="margin-top: 22px;" id="btnAgregarSubProceso">@Html.Raw(AsignacionResource.EtiquetaAgregarSubProceso)</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="title-interna">
        <span>@Html.Raw(AsignacionResource.EtiquetaSubProceso)</span> 
    </div>
    <div class="table-grilla">
        <div id="divGrdResultadoSubProcesos"></div>
    </div>
    <div class="row form-inline form-group">
        <div class="col-sm-4">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-9 text-right"><label style="margin-top:8px;">@Html.Raw(AsignacionResource.EtiquetaCantidadSubProcesos): </label></div>                     
                        <div class="col-sm-3"><input type="text" class="form-control" readonly="readonly" id="txtCantidadSubProcesos"/></div>
                    </div>
                </div>
         </div>
        <div class="col-sm-4">
            <div class="form-group">
                <div class="row" style="margin-right: -740px;">                    
                    <div class="col-sm-4 text-right"><label style="margin-top:8px;">@Html.Raw(AsignacionResource.EtiquetaTotales): </label></div>                                       
                    <div class="col-sm-2">                        
                        <input type="text" style="text-align: center;" class="form-control" id="txtCantidadHorasPlanificadasSubProceso" readonly="readonly" />
                    </div>  
                </div>
            </div>
        </div>   
</div>
<div class="box-acciones-foot modal_box" id="divCancelarGuardar" style="display:none">
    <button class="btn btn-default" id="btnCancelarEquipoProceso" type="button" data-dismiss="modal">@Html.Raw(RecordsResource.EtiquetaBotonCancelar)</button>
    <button class="btn btn-primary" id="btnGrabarEquipoProceso">@Html.Raw(RecordsResource.EtiquetaBotonGuardar)</button>
</div>

<script type="text/javascript">  
        ns('Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.FormularioAgregarProcesosPersona.Models')
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.FormularioAgregarProcesosPersona.Models.AsignacionProyectoModel = @(Html.Raw(Json.Encode(Model)))
</script>