@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mantenimiento.ObjetivoEstrategicoFonafe
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mantenimiento.ObjetivoEstrategicoEmpresa
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante

<div class="modal-body">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-12">                
                <h6><strong><label id="txtSeguimiento" style="position: relative; margin-top: 7px;"></label></strong></h6>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label style="position: relative; margin-top: 7px;"><b>@Html.Raw(OEFResource.EtiquetaObjetivoEstrategicoFonafe):</b></label>
                <div>
                    <input id="txtNombreObjetivoEstrategicoFonafe" style="background-color:yellow;color:blue" name="txtNombreObjetivoEstrategicoFonafe" type="text" class="form-control" disabled="disabled">
                </div>
            </div>
        </div>
    </div>   
    <div class="row">
        <div class="col-sm-12">
            @Html.Hidden("hdnCodigoObjetivoEstrategicoFonafe")            
            @Html.Hidden("hdnCodigoAmbito")            
            <div class="table-grilla">                
                <div style="overflow-x: scroll;">
                    <div class="table-grilla">
                        <div id="divGrdResultObjetivoEmpresa">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource.GridNombreObjetivoEstrategicoEmpresa = '@Html.Raw(OEEResource.GridNombreObjetivoEstrategicoEmpresa)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource.GridDescripcionObjetivoEstrategicoEmpresa = '@Html.Raw(OEEResource.GridDescripcionObjetivoEstrategicoEmpresa)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource.GridObjetivoEstrategicoEmpresa = '@Html.Raw(OEEResource.GridObjetivoEstrategicoEmpresa)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource.GridResponsable = '@Html.Raw(OEEResource.GridResponsable)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.BandejaObjetivoEstrategicoEmpresa.Resource.GridEstado = '@Html.Raw(OEEResource.GridEstado)';                                
    </script>
}