@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mantenimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Mantenimiento.CentroCosto.FormularioBandejaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
        //var disabledEscritura = (Model.ControlPermisos.ControlTotal || Model.ControlPermisos.Escritura) ? false : true;
        //var disabledEliminar = (Model.ControlPermisos.ControlTotal) ? false : true;     
}

<div class="GmdBody-header">
    <h2>@CentroCostoResource.EtiquetaTituloPrincipal</h2>
</div>
<div class="GmdBody-body">
    <form id="frmCentroCostoRegistrar">
        <div class="row">

            <div class="col-sm-6 ">
            <div class="form-group">
                    <label>@Html.Raw(CentroCostoResource.EtiquetaEmpresa)</label>
                    @Html.DropDownList("slcEmpresa", Model.ListaEmpresa, new { @class = "form-control", @id = "slcEmpresa" })
            </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>@CentroCostoResource.EtiquetaCentroCosto</label>
                    @Html.TextBox("txtNombreCentroCosto", string.Empty, new { @id = "txtNombreCentroCosto", @class = "form-control", @maxlength = "50", onkeyup = "Pe.GMD.UI.Web.Components.Util.ToUpperCase(event)" })
                    @Html.DropDownList("nnnn", Model.ListaEmpresa, new { @id = "slcListaArea", @class = "form-control" })
                </div>
            </div>
            @*            <div class="col-sm-4 ">
                <div class="form-group">
                    <label>@Html.Raw(UnidadOrganizativaResource.EtiquetaEstado)</label>
                    @Html.DropDownListFor(model => Model.UnidadOrganizativa.EstadoRegistro,
                    new SelectList(
                        Model.listaEstado,
                        "Value",
                        "Text"), new { @class = "form-control", @id = "cboEstadoBusqueda" })
                </div>
            </div>*@
        </div>
    </form>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <button id="btnLimpiar" class="btn btn-info" type="reset">@GenericoResource.BotonLimpiar</button>
                <button id="btnBuscar" class="btn btn-default" type="button">@GenericoResource.BotonMostrar</button>
            </div>
        </div>
    </div>
    <hr />
    <div>
        <div class="row">
            <div class="col-sm-6">
                <h3>@GenericoResource.EtiquetaResultadosBusqueda</h3>
            </div>
            <div class="col-sm-6 text-right">
                <button id="btnAgregar" class="btn btn-primary">@GenericoResource.BotonAñadir</button>
            </div>
        </div>
        <div class="table-responsive">
            <div id="divGrdResult">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Actions.BuscarCentroCosto = '@Url.Action("BuscarCentroCosto", "CentroCosto", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Actions.FormularioCentroCosto = '@Url.Action("FormularioCentroCosto", "CentroCosto", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Actions.RegistrarCentroCosto = '@Url.Action("RegistrarCentroCosto", "CentroCosto", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Actions.EliminarCentroCosto = '@Url.Action("EliminarCentroCosto", "CentroCosto", new { Area = "Mantenimiento" })';

        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.FormularioCentroCosto = '@Html.Raw(CentroCostoResource.EtiquetaFormularioCentroCosto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.EtiquetaRegistrarCentroCosto = '@Html.Raw(CentroCostoResource.EtiquetaRegistrarCentroCosto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.EtiquetaEditarCentroCosto = '@Html.Raw(CentroCostoResource.EtiquetaEditarCentroCosto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.GridEmpresa = '@Html.Raw(CentroCostoResource.GridEmpresa)';      
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.GridAbreviaturaCC = '@Html.Raw(CentroCostoResource.GridAbreviaturaCC)'; 
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Resources.GridNombreCentroCosto = '@Html.Raw(CentroCostoResource.GridNombreCentroCosto)'; 
 
        
        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Models');
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.CentroCosto.Models.CentroCosto = '@(Html.Raw(Json.Encode(Model)))';
    </script>  
    @CustomHtmlHelper.RenderViewJs("mantenimientocentrocostoformulariocentrocosto") 
}
