@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Seguimiento.Investigacion.InvestigacionCausaRaizModel

<div class="main-content">
    <div class="modal-body">
        <form id="frmSeleccionarCausaRaiz">
            <div class="row">                
                @if (Model.ListaEntidadCausaRaiz != null && Model.ListaEntidadCausaRaiz.Count > 0)
                {
                    foreach (var item in Model.ListaEntidadCausaRaiz)
                    {
                        <div class="col-sm-12">                            
                            <div class="checkbox">
                                <label>
                                    <input id="id_@item.CodigoInvestigacionCausaRaiz" class="chkRaiz" type="checkbox" value="@item.CodigoInvestigacionCausaRaiz" data-identificadorcausa="@item.IdentificadorCausaRaiz"> @item.IdentificadorCausaRaiz : @item.NombreCausaRaiz
                                </label>
                            </div>                            
                        </div>
                    }
                }                
            </div>
        </form>
    </div>
    <div class="box-acciones-foot modal_box">
        <button class="btn btn-default" id="btnCancelarSeleccionarCausaRaiz" data-dismiss="modal">@Html.Raw(RecordsResource.EtiquetaBotonCancelar)</button>
        <button class="btn btn-primary" id="btnGrabarSeleccionarCausaRaiz">@Html.Raw(RecordsResource.EtiquetaBotonGuardar)</button>        
    </div>
</div>


<script type="text/javascript">
    ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Investigacion.Models')
    Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Investigacion.Models.FormularioSeleccionarCausaRaiz = @(Html.Raw(Json.Encode(Model)))
</script>
@CustomHtmlHelper.RenderViewJs()