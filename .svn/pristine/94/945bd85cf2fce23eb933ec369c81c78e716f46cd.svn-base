@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.VisitaGerencial
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Seguimiento.DocReabiertoGerencia.DocReabiertoGerenciaModel

<div class="main-content view-wrap" >
    <div class="GmdBody-header main-title">
        <h2 class="pull-left">
            <input type="hidden" id="hdnCodigoIntegradorTipoRegistro" value="@Model.Seguimiento.CodigoIntegradorTipoRegistro"/>
            <strong>@SeguimientoResource.EtiquetaReabiertoGerencia</strong>
        </h2>
    </div>
    <div class="content-body">
        <div class="title-interna">
            <span>@Html.Raw(RecordsResource.EtiquetaLista)</span>
        </div>
        <div class="filter-avanzado">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaTipoRegistro):</label>
                        @Html.TextBox("txtDescripcionTipoRegistro", Model.Seguimiento.DescripcionTipoRegistro, new { id = "txtDescripcionTipoRegistro", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaNumeroDocumento):</label>
                        @Html.TextBox("txtNumeroDocumento", Model.Seguimiento.NumeroDocumento, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtNumeroDocumento", @class = "form-control", @disabled = "disabled" } : new { id = "txtNumeroDocumento", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaPais):</label>
                        @Html.TextBox("txtNombrePais", Model.Seguimiento.NombrePais, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtNombrePais", @class = "form-control", @disabled = "disabled" } : new { id = "txtNombrePais", @class = "form-control", @disabled = "disabled" }) 
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(VisitaGerencialResource.EtiquetaProyecto):</label>
                        @Html.TextBox("txtNombreProyecto", Model.Seguimiento.NombreProyecto, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtNombreProyecto", @class = "form-control", @disabled = "disabled" } : new { id = "txtNombreProyecto", @class = "form-control", @disabled = "disabled" })  
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaEmpresa):</label>
                        @Html.TextBox("txtNombreEmpresa", Model.Seguimiento.NombreEmpresa, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtNombreEmpresa", @class = "form-control", @disabled = "disabled" } : new { id = "txtNombreEmpresa", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaDepartamento):</label>
                        @Html.TextBox("txtNombreDepartamento", Model.Seguimiento.NombreDepartamento, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtNombreDepartamento", @class = "form-control", @disabled = "disabled" } : new { id = "txtNombreDepartamento", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaTituloRegistro):</label>
                        @Html.TextBox("txtTituloRegistro", Model.Seguimiento.TituloRegistro, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtTituloRegistro", @class = "form-control", @disabled = "disabled" } : new { id = "txtTituloRegistro", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaEstadoIngresoDocumento):</label>
                        @Html.TextBox("txtDescripcionEstadoIngresoDocumento", Model.Seguimiento.DescripcionEstadoIngresoDocumento, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtDescripcionEstadoIngresoDocumento", @class = "form-control", @disabled = "disabled" } : new { id = "txtDescripcionEstadoIngresoDocumento", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaEstadoMinimoAccion):</label>
                        @Html.TextBox("txtDescripcionEstadoMinimoAccion", Model.Seguimiento.DescripcionEstadoMinimoAccion, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtDescripcionEstadoMinimoAccion", @class = "form-control", @disabled = "disabled" } : new { id = "txtDescripcionEstadoMinimoAccion", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaEstadoDocumento):</label>
                        @Html.TextBox("txtDescripcionEstadoDocumento", Model.Seguimiento.DescripcionEstadoDocumento, Model.Seguimiento.CodigoDocumento.HasValue ? (object)new { id = "txtDescripcionEstadoDocumento", @class = "form-control", @disabled = "disabled" } : new { id = "txtCodigoEstadoDocumento", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>@Html.Raw(SeguimientoResource.EtiquetaComentarioReabiertoGerencia):</label>
                        @Html.TextBox("txtComentario", Model.Seguimiento.Comentario, new { id = "txtComentario", @class = "form-control", @validable = "required Validar" })
                    </div>
                </div>
            </div>
        </div>
        <div class="box-acciones-foot filter">
            <button class="btn btn-default" id="btnCancelar">@Html.Raw(RecordsResource.EtiquetaBotonCancelar)</button>
            <button class="btn btn-primary" id="btnReabiertoGerencia">@Html.Raw(VisitaGerencialResource.EtiquetaBotonReabrirVisita)</button>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <div class="table-grilla">
                        <div id="divGrdResult">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource')
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridNumeroAccion = '@Html.Raw(SeguimientoResource.GridNumeroAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridPlanteaAccion = '@Html.Raw(SeguimientoResource.GridPlanteaAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridFechaPlanteadaAccion = '@Html.Raw(SeguimientoResource.GridFechaPlanteadaAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridEjecutaAccion = '@Html.Raw(SeguimientoResource.GridEjecutaAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridFechaVencimientoAccion = '@Html.Raw(SeguimientoResource.GridFechaVencimientoAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridDescripcionHallazgo = '@Html.Raw(SeguimientoResource.GridDescripcionHallazgo)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridDescripcionAccion = '@Html.Raw(SeguimientoResource.GridDescripcionAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.GridEstadoAccion = '@Html.Raw(SeguimientoResource.GridEstadoAccion)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.ConfirmacionGuardarCerrar = '@Html.Raw(SeguimientoResource.ConfirmacionGuardarCerrar)';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Resource.EtiquetaSinComentario = '@Html.Raw(SeguimientoResource.EtiquetaSinComentario)';

        ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Actions.DocReabiertoGerenciaDocumento = '@Url.Action("DocReabiertoGerenciaDocumento", "DocReabiertoGerencia", new { Area = "Seguimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Actions.BuscarBandejaDocumento = '@Url.Action("BuscarBandejaDocumento", "DocReabiertoGerencia", new { Area = "Seguimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Actions.DocReabiertoGerenciaIndex = '@Url.Action("Index", "DocReabiertoGerencia", new { Area = "Seguimiento" })';
        
        ns('Pe.ElectroPeru.SGI.Presentacion.VisitaGerencial.ReabiertoGerencia.DatosConstantes.ParametrosEstadoDocumento')
        Pe.ElectroPeru.SGI.Presentacion.VisitaGerencial.ReabiertoGerencia.DatosConstantes.ParametrosEstadoDocumento.Reabierto = '@DatosConstantes.ParametrosEstadoDocumento.Reabierto';
                
        ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Models')
        Pe.ElectroPeru.SGI.Presentacion.Seguimiento.DocReabiertoGerencia.FormularioDocReabiertoGerencia.Models.DocReabiertoGerenciaModel = '@(Html.Raw(Json.Encode(Model)))';

    </script>
}
