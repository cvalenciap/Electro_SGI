@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mantenimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Mensajes
@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante
@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Mantenimiento.Area.FormularioBandejaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content view-wrap" >
<div class="GmdBody-header main-title">
        <h2 class="pull-left">
            <strong>@Html.Raw(AreaResource.EtiquetaTituloPrincipal)</strong>
        </h2>
        <div class="pull-right">
            <div class="acciones-form btn-group btn-group-table" style="top: 10px">
                <button id="btnAgregar" type="button" class="btn-table text-line one">
                    @Html.Raw(AreaResource.BotonAgregarArea)
                </button>
            </div>
        </div>
    </div>
    <div class="content-body">
        <div class="title-interna">
            <span>@Html.Raw(AreaResource.EtiquetaLista)</span>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h4>@Html.Raw(GenericoResource.EtiquetaResultadosBusqueda)</h4>
            </div>
        </div>
        <div class="table-grilla">
            <div id="divGrdResult">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions.BuscarArea = '@Url.Action("BuscarAreaGrilla", "Area", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions.FormularioArea = '@Url.Action("FormularioArea", "Area", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions.RegistrarArea = '@Url.Action("RegistrarArea", "Area", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions.EliminarArea = '@Url.Action("EliminarArea", "Area", new { Area = "Mantenimiento" })';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Actions.BuscarDepartamento = '@Url.Action("BuscarDepartamento", "Departamento", new { Area = "Mantenimiento" })';

        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources')       
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.FormularioArea = '@Html.Raw(AreaResource.EtiquetaFormularioArea)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.EtiquetaRegistrarArea = '@Html.Raw(AreaResource.EtiquetaRegistrarArea)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.EtiquetaEditarArea = '@Html.Raw(AreaResource.EtiquetaEditarArea)';        
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridArea = '@Html.Raw(AreaResource.GridArea)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridCodigoArea = '@Html.Raw(AreaResource.GridCodigoArea)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridDepartamento = '@Html.Raw(AreaResource.GridDepartamento)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridNombreArea = '@Html.Raw(AreaResource.GridNombreArea)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridNombreColaboradorResponsable = '@Html.Raw(AreaResource.GridNombreColaboradorResponsable)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridProyecto = '@Html.Raw(AreaResource.GridProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridEstadoRegistroDescripcion = '@Html.Raw(AreaResource.GridEstadoRegistroDescripcion)';
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Resources.GridAcciones = '@Html.Raw(GenericoResource.GridAcciones)';

        ns('Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Models');
        Pe.ElectroPeru.SGI.Presentacion.Mantenimiento.Area.Models.Area = '@(Html.Raw(Json.Encode(Model)))';
    </script> 
    <style type="text/css">
        form-control {                                
                width: 100%;
            }
    </style>
    @CustomHtmlHelper.RenderViewJs("mantenimientoareaformularioarea") 
}
