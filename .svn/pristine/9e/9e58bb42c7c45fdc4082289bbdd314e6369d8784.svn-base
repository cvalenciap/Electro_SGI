@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Transversal.Core.Constante

@model Pe.ElectroPeru.SGI.Presentacion.Core.ViewModel.Seguimiento.Investigacion.InvestigacionCausaRaizModel
<div class="modal-body">
    <form id="frmAnalisisCausasRaices" onsubmit="return false;">
        <fieldset id="flsAnalisisCausasRaices" @(Model.InvestigacionCausaRaiz.CodigoEstadoInvestigacion != DatosConstantes.EstadoInvestigacion.PorElaborar ? "disabled=disabled" : null)>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>@Html.Raw(InvestigacionResource.EtiquetaCodigo): (*)</label>
                        @Html.TextBox("txtIdentificadorCausaRaiz", Model.InvestigacionCausaRaiz.IdentificadorCausaRaiz, new { id = "txtIdentificadorCausaRaiz", @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>@Html.Raw(InvestigacionResource.EtiquetaCategoria): (*)</label>
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.DropDownList("ddlCategoriaCausaRaiz", Model.ListaCategoria, new { @class = "form-control", @id = "ddlCategoriaCausaRaiz", @validable = "required Validar" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>@Html.Raw(InvestigacionResource.EtiquetaSubCategoria): (*)</label>
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.DropDownList("ddlSubCategoriaCausaRaiz", Model.ListaSubCategoria, new { @class = "form-control", @id = "ddlSubCategoriaCausaRaiz", @validable = "required Validar" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>@Html.Raw(InvestigacionResource.EtiquetaCausaRaiz): (*)</label>
                        <div class="row">
                            <div class="col-sm-12">
                                @Html.DropDownList("ddlCausaRaiz", Model.ListaCausaRaiz, new { @class = "form-control", @id = "ddlCausaRaiz", @validable = "required Validar" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>@Html.Raw(InvestigacionResource.EtiquetaComentario): (*)</label>
                        @Html.TextArea("txaComentarioCausaRaiz", Model.InvestigacionCausaRaiz.Comentario, new { id = "txaComentarioCausaRaiz", @class = "form-control", @validable = "required Validar", @maxlength = "400" })
                        <div class="text-right">
                            <label>@Html.Raw(string.Format(GenericoResource.EtiquetaMaximoCaracteres, 400))</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label>@Html.Raw(RecordsResource.EtiquetaAsociada): (*)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <input type="checkbox" id="chkCausaRaiz" style="margin: 5px; vertical-align: middle;" />
                        <label>@Html.Raw(InvestigacionResource.EtiquetaSeleccionarFactoresCausales):</label>
                    </div>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="txtNombreCausasRaices" validable="required Validar" value="@Model.DescripcionAccionCorrectivaFactor"/>
                    </div>
                </div>
            </div>
        </fieldset>
        <div id="divBotonEstado" class="box-acciones-foot modal_box text-center">
            <button class="btn btn-default" id="btnCancelarCausaRaiz">@Html.Raw(RecordsResource.EtiquetaBotonCancelar)</button>
            @if (Model.InvestigacionCausaRaiz.CodigoEstadoInvestigacion == DatosConstantes.EstadoInvestigacion.PorElaborar)
            {
                <button class="btn btn-primary" id="btnGuardarCausaRaiz">@Html.Raw(RecordsResource.EtiquetaBotonGuardar)</button>
            }
        </div>        
    </form>
</div>

<script type="text/javascript">
    ns('Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Investigacion.Models')
    Pe.ElectroPeru.SGI.Presentacion.Seguimiento.Investigacion.Models.FormularioCausaRaizModel = @(Html.Raw(Json.Encode(Model)))
</script>
