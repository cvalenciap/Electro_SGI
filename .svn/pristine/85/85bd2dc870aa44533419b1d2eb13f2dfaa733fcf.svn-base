@using Pe.ElectroPeru.SGI.Presentacion.Core.Helpers
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Seguimiento
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Base
@using Pe.ElectroPeru.SGI.Presentacion.Recursos.Capacitacion

<div class="main-content view-wrap">
    <div class="GmdBody-header main-title">
        <div class="pull-left">
            <h2 class="tituloCapacitacion"><strong><i class="fa fa-folder"></i>@Html.Raw(AsignacionResource.EtiquetaAsignacionProyecto)</strong></h2>
        </div>
        <div class="pull-right">
            <a id="btnRegresarBandejaCapacitacion" class="nav_ajx btn-action-form tool pull-left">
                <span data-toggle="tooltip" data-placement="left" title="" data-original-title="List of Records">
                    <i class="listado_record"></i>
                </span>
            </a>
        </div>
        <div class="pull-right">
            <span class="box-type-record">
                <div class="row-line-table">
                    <div class="cell-line">
                        <label><strong>@Html.Raw(AsignacionResource.EtiquetaProyecto)</strong></label>
                    </div>
                    <div class="cell-line">
                        <div class="form-group">
                            <input type="text" id="hdnNombreProyecto" class="form-control" value="@ViewBag.NombreProyecto"/>
                            <input type="hidden" id="hdnCodigoProyecto" value="@ViewBag.CodigoProyecto"/>
                        </div>                        
                    </div>
                </div>
            </span>
        </div>
    </div>
    <div id="divRenderRecordSeccionCampo" class="tab_custom">
        <div class="content-body">
            <div class="filter-avanzado">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>@Html.Raw(AsignacionResource.EtiquetaFechaPreparacionDesde):</label>
                                <input  type="text" id="dtpFechaPreparacionDesde" class="form-control" placeholder="dd/MM/yyyy" validable="required Validar">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>@Html.Raw(AsignacionResource.EtiquetaFechaPreparacionHasta):</label>
                                <input type="text" id="dtpFechaPreparacionHasta" class="form-control" placeholder="dd/MM/yyyy"  validable="required Validar">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-acciones-foot modal_box">
                    <button class="btn btn-default" id="btnLimpiarAsignacionProyecto" type="button" data-dismiss="modal">@Html.Raw(AsignacionResource.EtiquetaLimpiar)</button>
                    <button class="btn btn-primary" id="btnBuscarAsignacionProyecto">@Html.Raw(AsignacionResource.EtiquetaBuscar)</button>
                </div>
            </div>
            <div class="title-interna">
                <div class="row">
                    <div class="col-sm-3">
                        <span>@Html.Raw(AsignacionResource.EtiquetaLista) </span>
                    </div>
                    <div class="col-sm-9">
                        <div class="pull-right">
                            <button class="btn btn-primary" type="submit" id="btnAgregarAsignacionProyecto">@Html.Raw(AsignacionResource.EtiquetaAgregarAsignacion)</button></div>
                    </div>
                </div>
            </div>
            <div class="table-grilla">
                <div id="divGrdResultadoProyectoMes"></div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        ns('Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Actions.BuscarAsignacionProyectoPorFiltro = '@Url.Action("BuscarAsignacionProyectoPorFiltro", "Asignacion", new { Area = "Capacitacion" })';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Actions.EliminarAsignacionProyecto = '@Url.Action("EliminarAsignacionProyecto", "Asignacion", new { Area = "Capacitacion" })';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Actions.BandejaCapacitacion = '@Url.Action("Index", "Asignacion", new { Area = "Capacitacion" })';
        
        ns('Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.Actions')
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.Actions.FormularioSeleccionarPersonas = '@Url.Action("FormularioSeleccionarPersonas", "Asignacion", new { Area = "Capacitacion" })';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.Actions.FormularioAgregarProyectoModal = '@Url.Action("FormularioAgregarProyectoModal", "Asignacion", new { Area = "Capacitacion" })';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.Asignacion.Actions.RegistrarAsignacionProyecto = '@Url.Action("RegistrarAsignacionProyecto", "Asignacion", new { Area = "Capacitacion" })';

        ns('Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource')
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridProyecto = '@Html.Raw(AsignacionResource.GridProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridNroMes = '@Html.Raw(AsignacionResource.GridNroMes)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridFechaPreparacion = '@Html.Raw(AsignacionResource.GridFechaPreparacion)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridHorasPlanificadas = '@Html.Raw(AsignacionResource.GridHorasPlanificadas)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridPersonalActivo = '@Html.Raw(AsignacionResource.GridPersonalActivo)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridPersonalPlanificado = '@Html.Raw(AsignacionResource.GridPersonalPlanificado)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.GridOperaciones = '@Html.Raw(AsignacionResource.GridOperaciones)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.EtiquetaVentanaAgregarProyecto = '@Html.Raw(AsignacionResource.EtiquetaVentanaAgregarProyecto)';
        Pe.ElectroPeru.SGI.Presentacion.Capacitacion.FormularioAsignacionProyecto.Resource.EtiquetaMensajeProyectoRegistrado = '@Html.Raw(AsignacionResource.EtiquetaMensajeProyectoRegistrado)';
                      
    </script>

    @CustomHtmlHelper.RenderViewJs("capacitacionasignacionformularioagregarproyectomodal");

}
